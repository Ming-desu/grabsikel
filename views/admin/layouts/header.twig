<header class="p-4 d-flex justify-content-between align-items-center sticky-top bg-white shadow">
  <div class="d-flex align-items-center">
    <button type="button" class="btn text-muted d-block d-md-none" id="btn-toggle-menu">
      <i class="las la-bars"></i>
    </button>
    <h1 class="h3 m-0">
      <img src="/img/grabsikel.svg" width="50" height="50" alt="Grabsikel">
      Grabsikel
    </h1>
  </div>
  <div class="dropdown d-none d-md-block">
    <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
      {% if AUTHENTICATED_USER.picture %}
        <img src="/api/uploads/{{ AUTHENTICATED_USER.picture }}?width=35&height=35" width="35" height="35" alt="{{ AUTHENTICATED_USER.full_name }} picture" class="rounded-circle border">
      {% else %}
        <img src="https://avatars.dicebear.com/api/initials/{{ AUTHENTICATED_USER.full_name }}.svg?size=30" width="35" height="35" class="rounded-circle border" alt="{{ AUTHENTICATED_USER.full_name }} initials">
      {% endif %}
    </button>
    <ul class="dropdown-menu dropdown-menu-end">
      <li><a href="" class="dropdown-item">Profile</a></li>
      <li><a href="/admin/auth/logout" class="dropdown-item">Logout</a></li>
    </ul>
  </div>
</header>